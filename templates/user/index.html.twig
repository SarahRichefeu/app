{% extends 'base.html.twig' %}

{% block title %}Gestion des employés{% endblock %}

{% block body %}
    <div class="container w-75 m-auto">
        <h1 class="text-center p-5 fs-4">Gestion des employés</h1>
        <div class="d-flex justify-content-center align-items-end m-5">
            <a href="/user/new" class="btn btn-dark btn-sm">Ajouter un employé</a>
        </div>

        <div class="list m-auto container">
            {% for user in users %}
            <ul class="list-group">
                <li class="list-group-item list-group-item-dark d-flex justify-content-between align-items-center my-2">
                  {{ user.firstname }} {{ user.lastname }}
                    <span class="">
                        <a  class="badge bg-dark rounded-pill p-2" href="/user/edit/{{ user.id }}">
                            <i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>
                        </a>
                        <a class="badge bg-dark rounded-pill p-2" href="/user/delete/{{ user.id }}">
                            <i class="fa-solid fa-trash" style="color: #f7f7f7;"></i>
                        </a>
                    </span>
                </li>
            </ul>
            {% endfor %}
        </div>

    </div>
{% endblock %}
