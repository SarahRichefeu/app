{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container w-75 m-auto">
        <h1 class="text-center p-5 fs-4">Espace employ√©</h1>

        {% if error %}
            <div class="alert alert-danger">{{error.messageKey}}</div>
        {% endif %}

        <form method="POST">
            <fieldset>
                <div class="form-group row">
                    <label for="username" class="form-label mt-4">Email</label>
                    <input type="email" class="form-control" name="_username" id="username" aria-describedby="emailHelp" placeholder="Addresse email" required>
                </div>
                <div class="form-group row">
                    <label for="password" class="form-label mt-4">Mot de passe</label>
                    <input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe" required>
                    <input type="hidden" name="_target_path" value="/">
                </div>
            </fieldset>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mt-4 btn-sm">Se connecter</button>
            </div>
        </form>
    </div>
{% endblock %}
