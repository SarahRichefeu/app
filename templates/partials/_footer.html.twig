<footer class="container-fluid">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 p-4 mt-5 border-top bg-primary" data-bs-theme="dark">
        <div class="col mb-3 p-4">
            <p class="text-body-secondary">© 2023</p>
        </div>

        <div class="col mb-3"></div>

        <div class="col mb-3">
            <table>
                <tbody>
                    {% for hour in hours %}
                    <tr>
                        <td>{{ hour.day }} : </td>
                        <td>{{ hour.morning }} / </td>
                        <td> {{ hour.afternoon }}</td>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col mb-3">
            <ul class="nav flex-column">
                {% for gar in garage %}
                <li class="nav-item mb-2 p-0 text-body-secondary">{{ gar.phone }}</li>
                <li class="nav-item mb-2 p-0 text-body-secondary">{{ gar.address }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="col mb-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="{{ path('cgu') }}" class="nav-link p-0 text-body-secondary">Politique de confidentialité et mentions légales</a></li>
            </ul>
            {% if app.user == null %}
            <div class="connexion">
                <a href="/login" class="btn btn-outline-light btn-sm">Espace employé</a>
            </div>
            {% endif %}
        </div>

     </div>
</footer>
